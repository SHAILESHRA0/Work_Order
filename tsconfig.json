{
  "compilerOptions": {
    "target": "es2020",
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "outDir": "./dist",
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": true,
    "checkJs": false
  },
  "include": ["lib/**/*.ts", "lib/**/*.js", "public/*.html", "../index.js", "routes/**/*.ts"],
  "exclude": ["node_modules", "dist", "certificates"]
}
