generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id       String   @id @default(auto()) @map("_id") @db.ObjectId

  name     String   @default("user")
  email    String   @unique
  password String
  role     Role @default(user)

  employeeId String? @db.ObjectId @unique
  employee   Employee? @relation(fields: [employeeId], references: [id])
  
  lastLogin DateTime?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  assignedTasks Task[] // Tasks assigned to this user
}

model Employee {
  id       String   @id @default(auto()) @map("_id") @db.ObjectId
  access AccessLevel @default(low)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt 

  user User?
  assignedTasks Task[] // Tasks assigned by this employee
}

model WorkOrder {
  id String @id @default(auto()) @map("_id") @db.ObjectId

  model String
  license String
  type String
  parts String[]
  tools String[]
  
  tasks Task[] // One WorkOrder can have many tasks
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Task {
  id String @id @default(auto()) @map("_id") @db.ObjectId

  title String
  description String
  progess Int @default(0) @db.Long

  priority Priority @default(low)
  status TaskStatus @default(pending)

  assignedToId String? @db.ObjectId
  assignedTo User? @relation(fields: [assignedToId], references: [id])

  assignedById String? @db.ObjectId
  assignedBy Employee? @relation(fields: [assignedById], references: [id])
  
  workOrderId String? @db.ObjectId
  workOrder WorkOrder? @relation(fields: [workOrderId], references: [id])

  completedAt DateTime?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model OrderType {
  id String @id @default(auto()) @map("_id")@db.ObjectId
  name String @unique
}

enum TaskStatus {
  pending
  in_progress
  completed
  assigned
}

enum Priority {
  low
  medium
  high
}

enum Role {
  admin
  hod
  supervisior
  manager
  technician
  user
}

enum AccessLevel {
  high
  medium
  low
}